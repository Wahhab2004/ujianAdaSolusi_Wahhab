<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/leftCursorr"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_keyboard_arrow_left_24"/>

    <TextView
        android:id="@+id/iknipp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_iknip"
        android:layout_toEndOf="@id/leftCursorr"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <ImageView
        android:id="@+id/bell"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_bell"
        android:layout_marginTop="38dp"
        android:layout_toEndOf="@id/leftCursorr"
        android:layout_marginStart="250dp"/>

    <ImageView
        android:id="@+id/more"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_titik_tiga"
        android:layout_marginTop="38dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/bell" />


<!--    Linear Layouut-->
    <LinearLayout
        android:id="@+id/layoutProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iknipp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp">


        <ImageView
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_below="@+id/iknipp"
            android:src="@drawable/pp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6956"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postingan"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27,7jt"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengikut"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="219"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mengikuti"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/namee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ikhwan Hanipp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/layoutProfile"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/profesi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programmer"
        android:layout_below="@id/namee"
        android:layout_marginStart="40dp"/>


    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="“You might not think that programmers are  artists, but programming is an extremely creative profession. It’s  logic-based creativity.” – John Romero  💻"
        android:layout_below="@id/profesi"
        android:layout_marginStart="40dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editProfil"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Edit profil"
        android:backgroundTint="@color/lightGray"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:layout_below="@id/deskripsi"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounder"
        android:layout_marginStart="40dp"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bagikanProfil"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Bagikan profil"
        android:backgroundTint="@color/lightGray"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:layout_toEndOf="@id/editProfil"
        android:layout_below="@id/deskripsi"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounder"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editProfil"
        android:src="@drawable/ic_feed"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/reels"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_below="@id/editProfil"
        android:src="@drawable/ic_reels"
        android:layout_marginStart="120dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/feed"
        android:layout_centerHorizontal="true"
        />


    <ImageView
        android:id="@+id/tag"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_below="@id/editProfil"
        android:src="@drawable/ic_tag"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/reels"
        android:layout_centerHorizontal="true"
        />




    <LinearLayout
        android:id="@+id/footer"
        android:layout_below="@+id/reels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="290dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lightGray"
        android:translationZ="-10dp"
        android:elevation="10dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnToHome"
            android:background="@color/lightGray"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_home" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_search"
            android:layout_marginStart="55dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_upload"
            android:layout_marginStart="55dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_reels"
            android:layout_marginStart="55dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_profile_active"
            android:layout_marginStart="55dp"/>

    </LinearLayout>







</RelativeLayout>